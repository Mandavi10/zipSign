@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/parsley.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <h2>Designation Creation</h2>
                <ul class="breadcrumb">
                    @*<li class="breadcrumb-item"><a href="index.html"><i class="fa fa-dashboard"></i></a></li>*@
                    <li class="breadcrumb-item">Masters</li>
                    <li class="breadcrumb-item active">Designation Creation</li>
                </ul>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="d-flex flex-row-reverse">
                    <div class="page_action">
                        @*<button type="button" class="btn btn-primary"><i class="fa fa-file-excel-o"></i> Excel</button>
                        <button type="button" class="btn btn-secondary"><i class="fa fa-send"></i> Send report</button>*@
                    </div>
                    <div class="p-2 d-flex">

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row clearfix">
        <div class="col-md-12">
            <div class="card">
                @*<div class="header">
            <h2>Basic Validation</h2>
        </div>*@
              
                <div class="body">
                    <form id="advanced-form" data-parsley-validate novalidate>
                        <div class="form-group">
                            <label for="text-input1">Designation Code</label>
                            <input type="text" id="text-input1" class="form-control" required data-parsley-minlength="8" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label for="text-input2">Designation Name</label>
                            <input type="text" id="text-input2" class="form-control" autocomplete="off" required>
                        </div>

                        <div class="form-group">
                            <label for="text-input4">Description</label>
                            <textarea class="form-control" rows="4" cols="30" required></textarea>

                        </div>

                        <div class="form-group">

                            <label class="control-inline fancy-checkbox">
                                <input type="checkbox" name="checkbox2" required data-parsley-mincheck="2" data-parsley-errors-container="#error-checkbox2">
                                <span>Active</span>
                            </label>

                            <p id="error-checkbox2"></p>
                        </div>

                        <br />
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-light pull-right" onclick="window.location.href='../Masters/AllDesignations';"><i class="fa fa-angle-double-left"></i> Back</button>
                    </form>
                </div>
            </div>
        </div>

    </div>

</div>
<script src="~/Content/js/libscripts.bundle.js"></script>
<script src="~/Content/js/mainscripts.bundle.js"></script>
<script src="~/Content/js/parsley.min.js"></script>
<script src="~/Content/js/mainscripts.bundle.js"></script>
<script>
    $(function () {
        

        // initialize after multiselect
        $('#basic-form').parsley();
    });
</script>