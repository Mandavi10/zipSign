                <div class="body givenheight1">
                    <form id="advanced-form" data-parsley-validate novalidate>
                        <div class="form-group">
                            <label for="text-input1">Department Code</label>
                            <input type="text" id="DepartmentCode" class="form-control" pattern="[A-Za-z0-9]{1,20}" maxlength="20" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label for="text-input2">Department Name</label>
                            <input type="text" id="DepartmentName" class="form-control" autocomplete="off">
                        </div>

                        <div class="form-group">
                            <label for="text-input4">Description</label>
                            <textarea class="form-control" rows="4" cols="30" id="Description"></textarea>

                        </div>
                        <div class="form-group" hidden>
                            <input type="text" id="DepartmentId" class="form-control" autocomplete="off">

                        </div>

                        <div class="alermsg col-md-12 p-1" role="alert" id="message" style="color:firebrick;"></div>

                        <div class="col-md-12 col-sm-12 d-flex flex-wrap">
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="form-group">

                                    @*<label class="control-inline fancy-checkbox">
