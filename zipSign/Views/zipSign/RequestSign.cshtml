<script>
    // Retrieve the stored file details and base64 data from session storage
    var uploadedFileName = sessionStorage.getItem('uploadedFileName');
    var uploadedFileSize = sessionStorage.getItem('uploadedFileSize');
    var uploadedFileData = sessionStorage.getItem('uploadedFileData');

    // Update the corresponding elements with the retrieved values
    $("#uploaded-file-name").text(uploadedFileName);
    $("#uploaded-file-size").text(uploadedFileSize);

    // Set the base64 data as the source of the iframe to display the document preview
    $("#document-preview-frame").attr("src", uploadedFileData);
</script>

<script>

    $(document).ready(function () {
        $(".adhar").click(function () {
            $(".adhar").addClass("activebtnsign");
            $(".dsc").removeClass("activebtnsign");
            $(".elect").removeClass("activebtnsign");
            $(".firstbtn").show();
            $(".secondbtn").hide();
            $(".thirdbtn").hide();
        });
        $(".dsc").click(function () {
            $(".dsc").addClass("activebtnsign");
            $(".adhar").removeClass("activebtnsign");
            $(".elect").removeClass("activebtnsign");
            $(".firstbtn").hide();
            $(".secondbtn").show();
            $(".thirdbtn").hide();
        });
        $(".elect").click(function () {
            $(".elect").addClass("activebtnsign");
            $(".adhar").removeClass("activebtnsign");
            $(".dsc").removeClass("activebtnsign");
            $(".firstbtn").hide();
            $(".secondbtn").hide();
            $(".thirdbtn").show();
        });
        $(".drw").click(function () {
            $(".drw").addClass("activebtnbox");
            $(".upimg").removeClass("activebtnbox");
            $(".drawdiv").show();
            $(".uploaddiv").hide();
        });
        $(".upimg").click(function () {
            $(".upimg").addClass("activebtnbox");
            $(".drw").removeClass("activebtnbox");
            $(".drawdiv").hide();
            $(".uploaddiv").show();
        });
    });
</script>


