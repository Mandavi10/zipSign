@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	.form-control {
		width: 97%
	}

	.alermsg {
		position: absolute;
		bottom: 9%
	}

	.crossfrimg {
		position: absolute;
		top: 7px;
		right: 18px;
		color: #ff3f3f;
		cursor: pointer;
	}


	.inpscrl {
		overflow: auto;
		height: 16vh;
		margin-bottom: 15px;
	}

		.inpscrl input[type="text"] {
			width: 87% !important;
		}

	.fulldiv {
		/*        height: 82vh;*/
	}

	.fixeddiv {
		position: fixed;
		right: 32px;
		bottom: 25px;
	}
</style>
<div class="container-fluid">
	<div class="block-header">
		<div class="row">
			<div class="col-lg-6 col-md-6 col-sm-12">
				<h2>Billing Information</h2>
				<ul class="breadcrumb">
					@*<li class="breadcrumb-item"><a href="index.html"><i class="fa fa-dashboard"></i></a></li>*@
					<li class="breadcrumb-item">Users</li>
					<li class="breadcrumb-item active">User Creation</li>
				</ul>
			</div>
			<div class="col-lg-6 col-md-6 col-sm-12">
				<div class="d-flex flex-row-reverse">
					<div class="page_action">
						@*<button type="button" class="btn btn-primary"><i class="fa fa-file-excel-o"></i> Excel</button>
							<button type="button" class="btn btn-secondary"><i class="fa fa-send"></i> Send report</button>*@
						@*<button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>*@
					</div>
					<div class="p-2 d-flex">

					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row clearfix">
		<div class="col-md-12">
			<div class="card">
				@*<div class="header">
						<h2>Basic Validation</h2>
					</div>*@

				<div class="body fulldiv">
					<form id="advanced-form" data-parsley-validate novalidate>
						<div class="col-md-12 d-flex flex-wrap">
							<div class="form-group col-md-6">
								<label for="text-input2">Name</label>
								<input type="text" id="" class="form-control" autocomplete="off" required>
							</div>
							<div class="form-group col-md-6">
								<label for="text-input2">Email ID</label>
								<input type="text" id="" class="form-control" autocomplete="off" required>
							</div>
							<div class="form-group col-md-6">
								<label for="text-input2">Mobile No.</label>
								<input type="text" id="Phoneno" class="form-control" maxlength="10" autocomplete="off" required>
							</div>

							<div class="form-group col-md-6">
								<label for="text-input2">Address</label>
								<input type="text" id="" class="form-control" autocomplete="off" required>
							</div>

							<div class="col-md-6 mb-2">
								@*<label>GST Information</label>*@
								<button type="button" data-bs-toggle="modal" data-bs-target="#addGSTmodal" class="actionbtn GSTAddMoreBtn" id="">Add More GST Information</button>
							</div>

							<div class="col-md-12 d-flex flex-wrap gstInfobox">
								<div class="form-group col-md-6">
									<label for="text-input2">GST</label>
									<input type="text" id="" maxlength="15" class="form-control" autocomplete="off" required>
								</div>
								<div class="form-group col-md-6">
									<label for="text-input2">Address</label>
									<input type="text" id="" class="form-control" autocomplete="off" required>
								</div>
							</div>



							<div class="col-md-12 p-1" role="alert" id="message"></div>


							<div class="col-lg-12 col-md-12 col-sm-12 mt-2 d-flex justify-content-between ">

								<button type="button" class=" btn btn-light"><i class="fa fa-angle-double-left"></i> Back</button>
								<button type="button" class="btn btn-primary" id="btnsave">Save</button>
							</div>

						</div>
					</form>
				</div>
			</div>
		</div>

	</div>

</div>
<script src="~/Content/js/jquery-3.6.4.min.js"></script>




