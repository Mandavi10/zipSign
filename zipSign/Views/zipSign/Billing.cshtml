<script>
    $('.selectoptfpay').on('click', '.selectmethod', function () {
        $('.selectoptfpay .selectmethod').removeClass('activemethod');
        $(this).addClass('activemethod');
    });
</script>
<script>
    $(document).ready(function () {
        $(".crdr").click(function () {
            $(".cddiv").show();
            $(".upidiv").hide();
            $(".nbdiv").hide();
        });
        $(".upi").click(function () {
            $(".cddiv").hide();
            $(".upidiv").show();
            $(".nbdiv").hide();
        });
        $(".nbank").click(function () {
            $(".cddiv").hide();
            $(".upidiv").hide();
            $(".nbdiv").show();
        });
    });
</script>


