    .maintle {
        font-weight: 700;
        color: var(--dark-color);
    }

    .selectmethod {
        border: 1px solid #cdcdcd;
        width: 33%;
        text-align: center;
        padding: 15px;
        margin-right: 2px;
        cursor: pointer;
