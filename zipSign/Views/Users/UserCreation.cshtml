<script>var jquery_3_6 = jQuery.noConflict();</script>

<script>
    jquery_3_6('input[name=control]').click(function () {
        if (this.id == "controlling") {
            jquery_3_6(".indiv").css('visibility', 'hidden');
        } else {
            jquery_3_6(".indiv").css('visibility', 'visible');
        }
    });
    function upperCaseF(a) {
        setTimeout(function () {
            a.value = a.value.toUpperCase();
        }, 1);
    }
</script>
<script>
    jquery_3_6(document).ready(function () {
        jquery_3_6(".actionbtn").click(function () {
            jquery_3_6(".appendinp").show();
        });
        jquery_3_6(".crossfrimg").click(function () {
            jquery_3_6(".appendinp").hide();
        });
    });
</script>
<script>
    function isNumberKey(event) {
        var charCode = (event.which) ? event.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>


<div class="modal fade" id="confirmationpopup" tabindex="-1" role="dialog" aria-modal="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="title m-0" id="defaultModalLabel">Confirmation</h4>
            </div>
            <div class="modal-body pt-4 pb-4">
                <div class="col-12 text-center">
                    <label class="modcontxt">Are you sure you want to save.</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No, cancel</button>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#successpopup">Yes, save</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="successpopup" tabindex="-1" role="dialog" aria-modal="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="title m-0" id="defaultModalLabel">Success</h4>
            </div>
            <div class="modal-body pt-4 pb-4">
                <div class="col-12 text-center">
                    <label class="modcontxt">Data Saved Successfully.</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="ModalOk" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>