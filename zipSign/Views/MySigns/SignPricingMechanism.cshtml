
@{
    ViewBag.Title = "SignPricingMechanism";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .body {
        min-height: 81vh;
    }
    .form-control {
        width: 97%
    }

    .alermsg {
        position: absolute;
        bottom: 9%
    }

    .crossfrimg {
        position: absolute;
        top: 7px;
        right: 18px;
        color: #ff3f3f;
        cursor: pointer;
    }


    .inpscrl {
        overflow: auto;
        height: 16vh;
        margin-bottom: 15px;
    }

        .inpscrl input[type="text"] {
            width: 87% !important;
        }

    .fulldiv {
        /*        height: 82vh;*/
    }

    .fixeddiv {
        position: fixed;
        right: 32px;
        bottom: 25px;
    }
</style>
<div class="container-fluid">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <h2>Sign Pricing Mechanism</h2>
               
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="d-flex flex-row-reverse">
                    <div class="page_action">
                        @*<button type="button" class="btn btn-primary"><i class="fa fa-file-excel-o"></i> Excel</button>
                            <button type="button" class="btn btn-secondary"><i class="fa fa-send"></i> Send report</button>*@
                        @*<button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>*@
                    </div>
                    <div class="p-2 d-flex">

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row clearfix">
        <div class="col-md-12">
            <div class="card">
                @*<div class="header">
                        <h2>Basic Validation</h2>
                    </div>*@

                <div class="body fulldiv">
                    <form id="advanced-form" data-parsley-validate novalidate>
                        <div class="col-md-12 d-flex flex-wrap formDiv">
                            <div class="form-group col-md-6">
                                <label for="text-input2">Corporate Name</label>
                                <div class="c_multiselect">
                                    <select name="single_selection" class="form-control">
                                       
                                        <option value="">Retail</option>
                                      
                                    </select>
                                </div>

                            </div>
                            <div class="form-group col-md-6">
                                <label for="text-input2">Corporate ID</label>
                                <input type="text" id="" class="form-control" autocomplete="off" />
                                

                            </div>
                            <div class="form-group col-md-6">
                                <label for="text-input2">Sign Range</label>
                                <div class="c_multiselect">
                                    <select name="single_selection" class="form-control">
                                        <option value="">Select</option>
                                        <option value="">1 - 100</option>
                                        <option value="">101 - 500</option>
                                        <option value="">501 - 1000</option>
                                        <option value="">1001 - 1500</option>
                                        <option value="">1501 - 2000</option>
                                    </select>
                                </div>

                            </div>
                            <div class="form-group col-md-6">
                                <label for="text-input2">UIDAI Price</label>
                                <input type="text" id="" class="form-control" autocomplete="off" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="text-input2">Our Rate</label>


                                <input type="text" id="" class="form-control" autocomplete="off" />

                            </div>
                            <div class="form-group col-md-6">
                                <label for="text-input2">Net Price</label>
                                <input type="text" id="" class="form-control" autocomplete="off" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="text-input2">Amount with Tax</label>
                                <input type="text" id="" class="form-control" autocomplete="off" />
                            </div>

                            <div class="form-group col-md-6">
                                <label for="text-input2">Validity (in Days)</label>
                                <input type="text" id="" class="form-control" autocomplete="off" />
                            </div>

                            <div class="col-md-12 p-1" role="alert" id="message"></div>




                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 mt-2 d-flex justify-content-between ">

                            <button type="button" class=" btn btn-light" onclick="window.location.href='../MySigns/SignPricing';"><i class="fa fa-angle-double-left"></i> Back</button>

                            <button type="button" class="btn btn-primary" id="btnsave">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

</div>

