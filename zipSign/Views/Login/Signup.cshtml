    <script>
        function isNumberKey(event) {
            var charCode = (event.which) ? event.which : event.keyCode;
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                return false;
            }
            return true;
        }
        $(document).ready(function () {
            $('.eye1').click(function () {
                $(this).hide();
                $('.eyesl1').show();
                $('#password').attr('type', 'text')
            })
            $('.eyesl1').click(function () {
                $(this).hide();
                $('.eye1').show();
                $('#password').attr('type', 'password')
            })
        })
        $(document).ready(function () {
            $('.eye2').click(function () {
                $(this).hide();
                $('.eyesl2').show();
                $('#ConfirmPassword').attr('type', 'text')
            })
            $('.eyesl2').click(function () {
                $(this).hide();
                $('.eye2').show();
                $('#ConfirmPassword').attr('type', 'password')
            })
        })
    </script>
    <script>
        function validateInput(event) {
            var keyCode = event.keyCode;
            if ((keyCode >= 48 && keyCode <= 57) || // Numbers 0-9
                (keyCode >= 96 && keyCode <= 105) || // Numpad numbers
                (keyCode >= 186 && keyCode <= 192) || // Symbols ;=,-./`
                (keyCode >= 219 && keyCode <= 222)) { // Symbols [\]''
                event.preventDefault(); // Prevent the input
            }
        }
    </script>
