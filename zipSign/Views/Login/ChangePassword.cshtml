@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>zipSign</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/main.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    @*<script src="~/Content/assets/js/jquery-3.6.4.min.js"></script>*@


    <style>
        .top h3 {
            color: #fff;
            position: absolute;
            top: 10px;
            left: 10px;
        }
        .capdiv {
            width: 127px;
            height: 37px;
            overflow: hidden;
            border: 1px solid #e2e2e2;
            margin-left: 14px;
        }

        .refcap {
            position: absolute;
            right: 11px;
            top: 7px;
            font-size: 20px;
            color: #0058b1;
            cursor: pointer;
        }

        .pages {
            display: flex;
            width: 100%;
            box-sizing: border-box;
        }

        .page {
            width: 100%;
            transition: all 0.7s;
            color: white;
        }

        .auth-box {
            overflow: hidden;
            width:450px;
        }

        .auth-main .card {
            height: 425px !important;
            border: none !important;
        }

        .loginbtn {
            margin-top: 100px !important;
        }

        .alert {
            padding: 0.3rem 1.25rem !important;
        }

        a {
            color: #0058b1 !important;
        }

        .resendotp {
            color: #0058b1;
            margin-left: 10px;
            text-decoration: underline;
            cursor: pointer;
        }

        .captchainput {
            width: 40%;
        }

        .alermsg {
            color: #de4848;
            font-size: 0.9em;
            margin-top: 3px;
        }
        .erdiv {
            margin-bottom: 0.3rem !important;
        }
        .formHeight {
            height: 180px;
        }
    </style>
</head>

<body data-theme="light" class="font-nunito">
    <div id="wrapper" class="theme-cyan">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle auth-main">
                <div class="auth-box">
                    <div class="top">
                        @*<img src="assets/images/logo-white.svg" alt="Iconic">*@
                        <h3 style="color:#fff">zipSign</h3>
                    </div>
                    <div class="pages">
                        <div class="page">
                            <div class="card">
                                <div class="header">
                                    <p class="lead">Change your password</p>
                                </div>
                                <div class="body">
                                    <form class="form-auth-small" action="index.html">
                                        <div class="formHeight">
                                            <div class="form-group">
                                                <input type="email" class="form-control" id="oldpassword" placeholder="Old password" autocomplete="off">
                                            </div>
                                            <div class="form-group">
                                                <input type="email" class="form-control" id="newpassword" placeholder="New password" autocomplete="off">
                                            </div>
                                            <div class="form-group erdiv">
                                                <input type="email" class="form-control" id="confirmpassword" placeholder="Confirm new password" autocomplete="off">
                                            </div>
                                            <div class="alermsg" role="alert" id="message"></div>
                                        </div>

                                        <button type="button" class="btn btn-primary btn-lg btn-block col-md-12" onclick="UpdatePassword()">SUBMIT</button>

                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery-3.6.4.min.js"></script>
    <script src="~/JavaScript/ResetPassword.js"></script>
</body>
</html>
