                                <li class="selected" data-date="16/01/2017">
                                    <h4>
                                        Corporate Details<br />
                                        @*<small>January 16th, 2017</small>*@
                                    </h4>
                                    <hr>
                                    <form id="basic-form" method="post" novalidate>
                                        <div class="form-group">
                                            <label>
                                                Corporate Name
                                            </label>
                                            <input type="text" class="form-control" required>
                                        </div>
                                        <div class="form-group">
                                            <label>
                                                Corporate Address
                                            </label>
                                            <input type="text" class="form-control" required>
                                        </div>
                                        <div class="form-group">
                                            <label>
                                                Primary System Admin Name
                                            </label>
                                            <input type="text" class="form-control" required>
                                        </div>
                                        <div class="form-group">
                                            <label>
                                                Primary System Admin Email
                                            </label>
                                            <input type="email" class="form-control" required>
                                        </div>
                                        <div class="form-group">
                                            <label>
                                                Primary System Admin Phone No.
                                            </label>
                                            <input type="text" class="form-control" required>
                                        </div>


                                        <div class="col-lg-12 col-md-12 p-0">
                                            <div class="col-lg-12 col-md-12 p-0">
                                                <label>
                                                    Corporate Logo
                                                </label>
                                            </div>
                                            <div class=" col-lg-12 col-md-12 d-flex flex-wrap p-0">
                                                <div class="body col-lg-4 col-md-4 p-0">
                                                    <input type="file" class="dropify" data-max-file-size="100K">
                                                </div>

                                                <div class="card col-lg-4 col-md-4 corporatelogo">
                                                    <span class="cross" id="delimage">×</span>
                                                </div>
                                            </div>
                                        </div>


                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </li>

                                <li data-date="28/02/2017">
                                    <h4>
                                        Other<br />
                                    </h4>
                                    <hr>
                                    <div class="form-group">
                                        <label>
                                            Select the mode of signature
                                        </label>
                                        <br />
                                        <label class="fancy-radio col-md-3">
                                            <input type="radio" name="sign" value="Aadhaar" required data-parsley-errors-container="#error-radio">
                                            <span><i></i>Aadhaar eSign</span>
                                        </label>
                                        <label class="fancy-radio col-md-3">
                                            <input type="radio" name="sign" value="DSC">
                                            <span>
                                                <i></i>DSC eSign
                                            </span>
                                        </label>
                                        <label class="fancy-radio col-md-3">
                                            <input type="radio" name="sign" value="Electronic">
                                            <span>
                                                <i></i>Electronic eSign
                                            </span>
                                        </label>
                                        <p id="error-radio"></p>
                                    </div>
